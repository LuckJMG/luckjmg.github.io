---
import { getCollection } from 'astro:content';
const { year } = Astro.props;
const posts = await getCollection('blog', ({ data }) => {
	return data.year === Number(year);
});
---
<style lang='scss'>
div {
	margin-top: 1rem;
	margin-inline: auto;
	width: 50%;

	h4 {
		margin-top: 0;
		margin-bottom: .5rem;
	}

	ul {
		margin-top: 0;
		margin-bottom: 2rem;
		list-style: none;
	}

	a {
		color: var(--accent);
		text-decoration: none;

		&:hover {
			color: var(--primary);
		}
	}
}
</style>
<div>
	<h4>{ year }</h4>
	<ul>
	{
		posts.map(
			(post) => <li><a href=`/blog/${post.slug}`>{post.data.title}</a></li>
		)
	}
	</ul>
</div>
